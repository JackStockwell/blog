<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
<!-- Conditionally render login or logout links -->
    {{#if logged_in}}
        <nav>
            <div class="nav-container">
                <div>
                    <a href="/"><h1>SHOUT</h1></a>
                </div>
                <div>
                    {{#if logged_in}}
                    <a href="/login" class="btn">profile</a>
                    {{else}}
                    <a href="/signup" class="btn">login</a>
                    {{/if}}
                    <button data-open-logout class="btn" id="logout" onclick="openLogoutModal(event)">logout</button>
                    <dialog data-modal-logout class="modal">
                        <h2>Logout?</h2>
                        <div class="modal-wrapper logout-modal"> 
                            <button class="btn" onclick="handleLogout(event)">Yes</button>
                            <button class="btn" data-close-modal-logout onclick="closeLogoutModal(event)">No</button>
                        </div>
                    </dialog>
                </div>
            </div>
        </nav>
    {{/if}}

    <main class="main-wrapper">
        {{{ body }}}
    </main>

    <section data-alert class="pop-up">
        <p data-alert-text>Lorem ipsum dolor sit amet consectetur adipisicing elit. Sint, minus.</p>
        <a href="/login" class="btn">login</a>
    </section>

    <footer>
      
    </footer>

  <script src="/js/script.js"></script>

</body>

</html>
